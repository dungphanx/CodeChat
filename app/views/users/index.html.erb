<% if current_user %>
	Let's add some friend and hang out now!
<% else %>
<div class="row">
	<div class="col-xs-6">
		<img src="http://www.pensilia.com/vnt_upload/news/09_2014/anh3_1411109820668.jpg" alt="..." class="img-thumbnail">
	</div>
	<div class="col-xs-6">
		<h4>If you don't have account?</h4>
		<h3>Register now or <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></h3>
		<%= form_for @user do |f| %>
			<div class="form-group">
				<%= f.label :name, class: 'form-control-label' %>
				<%= f.text_field :name, placeholder: "Enter your name..", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :email, class: 'form-control-label' %>
				<%= f.text_field :email, placeholder: "Enter your email..", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password, class: 'form-control-label' %>
				<%= f.password_field :password, class: 'form-control' %>
			</div>

			<%= f.submit "Create Account", class: 'btn btn-secondary' %>
		<% end %>
	</div>
</div>
	
<% end %>