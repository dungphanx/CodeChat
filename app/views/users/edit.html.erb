<h1>Edit Profile</h1>

<%= form_for(@user, html: {multipart: true}) do |f| %>
	<div class="form-group">
		<%= f.label :name, class: 'form-control-label' %>
		<%= f.text_field :name, class: 'form-control' %>
		<%= f.file_field :avatar, class: 'form-control-file' %>
	</div>
	
	<%= f.submit "Save Change", class: 'btn btn-success' %>
	<%= link_to "Back", @user, class: 'btn btn-secondary' %>
<% end %>