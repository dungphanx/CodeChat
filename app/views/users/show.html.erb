<h1>Profile for <%= current_user.name %></h1>

<div class="col-xs-6">
	<div class="col-xs-3">
		<div class="user-avatar">
			<%= image_tag current_user.avatar_img %>
		</div>	
	</div>
	<div class="col-xs-9">
		<p>Name: <%= current_user.name %></p>
		<p>Email: <%= current_user.email %></p>
		<%= link_to "Edit", edit_user_path(current_user.id), class: 'btn btn-secondary' %>
	</div>
</div>


